<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.firstQuizActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/marvel_logo"
            android:layout_marginBottom="@dimen/layout_margin"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_description1"
            android:textAllCaps="true"
            android:fontFamily="@font/font_heading_marvel"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="#000000"
            android:layout_marginBottom="@dimen/layout_margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_bottom_and_padding"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:textColor="#000000"
                android:text="@string/quiz1_question1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/id_question1a"
                android:onClick="answer1aIsChecked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                android:text="@string/quiz1_question1_answer1" />

            <CheckBox
                android:id="@+id/id_question1b"
                android:onClick="answer1bIsChecked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                android:text="@string/quiz1_question1_answer2" />

            <CheckBox
                android:id="@+id/id_question1c"
                android:onClick="answer1cIsChecked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quiz1_question1_answer3" />

            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/id_layout_question1"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_image_question1"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:layout_height="@dimen/right_and_wrong_answer_height" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_text_question1"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/question1"
                />




            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_bottom_and_padding"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:textColor="#000000"
                android:text="@string/quiz1_question2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/id_question2a"
                    android:onClick="answer2aIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:text="@string/quiz1_question2_answer1" />

                <CheckBox
                    android:id="@+id/id_question2b"
                    android:onClick="answer2bIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:text="@string/quiz1_question2_answer2" />

                <CheckBox
                    android:onClick="answer2cIsChecked"
                    android:id="@+id/id_question2c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz1_question2_answer3" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/id_layout_question2"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_image_question2"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:layout_height="@dimen/right_and_wrong_answer_height" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_text_question2"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/question2"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_bottom_and_padding"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:text="@string/quiz1_question3"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/id_question3a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:onClick="answer3aIsChecked"
                    android:text="@string/quiz1_question3_answer1" />

                <CheckBox
                    android:id="@+id/id_question3b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:onClick="answer3bIsChecked"
                    android:text="@string/quiz1_question3_answer2" />

                <CheckBox
                    android:id="@+id/id_question3c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="answer3cIsChecked"
                    android:text="@string/quiz1_question3_answer3" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/id_layout_question3"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_image_question3"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:layout_height="@dimen/right_and_wrong_answer_height" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_text_question3"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/question3"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_bottom_and_padding"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/margin_bottom_and_padding"
            android:textColor="#000000"
            android:text="@string/quiz1_question4" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/id_question4a"
                    android:onClick="answer4aIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:text="@string/quiz1_question4_answer1" />

                <CheckBox
                    android:id="@+id/id_question4b"
                    android:onClick="answer4bIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:text="@string/quiz1_question4_answer2" />

                <CheckBox
                    android:id="@+id/id_question4c"
                    android:onClick="answer4cIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz1_question4_answer3" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/id_layout_question4"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_image_question4"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:layout_height="@dimen/right_and_wrong_answer_height" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_text_question4"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/question4"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_bottom_and_padding"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:text="@string/quiz1_question5"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/id_edit_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAllCaps="true"
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:inputType="textPersonName"
                android:text="" />


            <Button
                android:id="@+id/id_give_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="end"
                android:onClick="GiveUpButtonIsPressed"
                android:visibility="gone"
                android:textColor="#017EC6"
                android:text="@string/giving_up" />

            <Button
                android:id="@+id/id_guess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#017EC6"
                android:onClick="makeGiveUpButtonVisible"
                android:textColor="@android:color/white"
                android:text="@string/guess" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/id_layout_question5"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_image_question5"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:layout_height="@dimen/right_and_wrong_answer_height" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_text_question5"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/question5"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/margin_bottom_and_padding"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:textColor="#000000"
                android:text="@string/quiz1_question6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/id_question6a"
                    android:onClick="answer6aIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:text="@string/quiz1_question6_answer1" />

                <CheckBox
                    android:id="@+id/id_question6b"
                    android:onClick="answer6bIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_checkbox"
                    android:text="@string/quiz1_question6_answer2" />

                <CheckBox
                    android:id="@+id/id_question6c"
                    android:onClick="answer6cIsChecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz1_question6_answer3" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/id_layout_question6"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_bottom_and_padding"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_image_question6"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:layout_height="@dimen/right_and_wrong_answer_height" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_text_question6"
                    android:layout_width="@dimen/width_image_and_textview_0"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/question6"
                />




        </LinearLayout>

        <Button
            android:onClick="receiveTheScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#017EC6"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="@string/score" />

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="@dimen/layout_margin"
            android:textSize="64sp" />



    </LinearLayout>


</ScrollView>
